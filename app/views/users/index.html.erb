<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2>New book</h2>
      <%= render 'books/newbook', book: @book %>

    </div>

    <div class="col-xs-9">

      <h2>Books</h2>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2">
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to(book.user) do %>
                <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book, class: "book_#{book.id}" %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>


<table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :avatar_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
          <td><%= user.name%></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
