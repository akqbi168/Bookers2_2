<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2>User info</h2>
      <%= render 'users/info', user: @user,now: '',books: @books %>

      <h2>New book</h2>
      <%= render 'books/newbook', book: @book %>

    </div>

    <div class="col-xs-9">

      <h2>Books</h2>


        <table>
          <thead class="">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Show', book_path(book.id), class: "show_#{book.id}" %></td>
                <td><%= link_to 'Edit', edit_book_path(book.id), class: "edit_#{book.id}" %></td>
                <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{book.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


    </div>
  </div>
</div>


