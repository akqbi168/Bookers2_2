<%= form_for(book) do |f| %>
  <div class="field row">
    <%= f.label :title, class: "col-xs-12", placeholder:"本のタイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: "col-xs-6 form-control", rows:"5", placeholder:"感想を入力" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-xs-6" %>
  </div>
<% end %>